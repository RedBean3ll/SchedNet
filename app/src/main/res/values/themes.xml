<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchedNet" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <!-- isPinned bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
        <item name="editTextStyle">@style/RobotoTextEditStyle</item>

    </style>

    <style name="ThemeOverlay.AppCompat.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MaterialTime" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="RobotoButtonStyle" parent="android:Widget.Holo.ActionButton.TextButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="RobotoTextEditStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

</resources>