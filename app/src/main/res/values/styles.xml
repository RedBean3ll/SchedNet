<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Login_Label">

    </style>

    <style name="Data_Edit_Material">

    </style>

    <style name="RibbonFrame">

    </style>

    <style name="LoginTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:background">@drawable/walpaper</item>
        <item name="android:text">@string/login_label_text</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
    </style>


    <style name="LoginLabels">
        <item name="android:minWidth">550dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DialogStyle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/TitleBarPadding</item>
        <item name="android:paddingEnd">@dimen/TitleBarPadding</item>
        <item name="android:textSize">40sp</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/ActionBarPadding</item>
    </style>

    <style name="ActionBarElement">
        <item name="android:layout_width">@dimen/GenericBarElementSize</item>
        <item name="android:layout_height">@dimen/GenericBarElementSize</item>
        <item name="android:background">@drawable/ic_button_background_round</item>
        <item name="android:layout_marginStart">@dimen/ActionBarElementMarginStart</item>
    </style>

    <style name="ActionBarAddElement">
        <item name="android:layout_width">@dimen/GenericBarElementSize</item>
        <item name="android:layout_height">@dimen/GenericBarElementSize</item>
        <item name="android:background">@drawable/ic_button_background_round</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="SaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:text">@string/generic_save_button_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ControlPane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ElementLeft">
        <item name="android:layout_width">@dimen/GenericBarElementSize</item>
        <item name="android:layout_height">@dimen/GenericBarElementSize</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:background">@drawable/ic_button_background_round</item>
    </style>

    <style name="ElementRight">
        <item name="android:layout_width">@dimen/GenericBarElementSize</item>
        <item name="android:layout_height">@dimen/GenericBarElementSize</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/ic_button_background_round</item>
    </style>

    <style name="ElementLabel">
        <item name="android:layout_width">@dimen/generic_auto_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DetailPane">

    </style>

    <style name="DetailPane.Element">
        <item name="android:layout_width">@dimen/generic_auto_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/calendar_detail_element_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>