<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:columnCount="1"
    android:padding="20dp"
    android:useDefaultMargins="true"
    tools:context=".Fragments.SignupFragment">

    <TextView
        android:id="@+id/forgot_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_label_title"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="50dp"
        />


    <TextView
        android:id="@+id/forgot_username_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp_text"

        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_username_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/temp_text"
        app:hintTextColor="@color/black"

        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:errorIconDrawable="@drawable/ic_baseline_error_24"

        app:errorTextColor="@color/red_error"
        app:errorTextAppearance="@color/red_error"
        app:boxStrokeErrorColor="@color/red_error" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgot_username_edit"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/forgot_local_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temp_text"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_gravity="bottom|center"
        />

</GridLayout>