<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_ribbon_frame_banner"
        android:background="@color/purple_700" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/general_task_name_hint"
        app:hintTextColor="@color/black"
        android:layout_marginStart="@dimen/chip_group_holder_horizontal_margin"
        android:layout_marginEnd="@dimen/chip_group_holder_horizontal_margin"

        app:errorIconDrawable="@drawable/ic_baseline_error_24"
        app:errorTextColor="@color/red_error"
        app:errorTextAppearance="@color/red_error"
        app:boxStrokeErrorColor="@color/red_error" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_favorite_todo_edit"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/chip_group_holder_horizontal_margin"
        android:layout_marginEnd="@dimen/chip_group_holder_horizontal_margin"
        >
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/new_favorite_todo_chipgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.google.android.material.chip.Chip
                android:id="@+id/new_favorite_todo_chip_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipIcon="@drawable/ic_baseline_push_pin_24"
                app:iconStartPadding="@dimen/general_chip_icon_padding"
                android:text="@string/new_chip_pin_text"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/new_favorite_todo_chip_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_chip_description_text"
                app:iconStartPadding="@dimen/general_chip_icon_padding"
                app:chipIcon="@drawable/ic_baseline_description_24" />

            <com.google.android.material.chip.Chip
                android:id="@+id/new_favorite_todo_chip_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_chip_due_text"
                app:iconStartPadding="@dimen/general_chip_icon_padding"
                app:chipIcon="@drawable/ic_baseline_date_range_24" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_favorite_todo_description_casing"
        app:counterEnabled="true"
        app:counterMaxLength="250"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/general_task_description_hint"
        android:layout_marginStart="@dimen/chip_group_holder_horizontal_margin"
        android:layout_marginEnd="@dimen/chip_group_holder_horizontal_margin"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/new_favorite_todo_description_edit"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="250"
            android:maxLines="5"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        style="@style/SaveButton"
        android:id="@+id/generic_save_button"
        />

</LinearLayout>