<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TitleBar"
        android:id="@+id/favorite_label"
        android:text="@string/favorite_label_text"
        android:textColor="@color/white"
        android:background="@color/purple_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/favorite_actionbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favorite_label"
        tools:listitem="@layout/list_ribbon_menu"
        tools:itemCount="15"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favorite_actionbar"
        style="@style/ActionBar"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/favorite_actionbar_dots"
            style="@style/ActionBarElement"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/generic_dots_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_dot_settings_ico" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/favorite_actionbar_switch"
            style="@style/ActionBarElement"
            android:contentDescription="@string/generic_actionbar_switch_description"
            app:layout_constraintStart_toEndOf="@id/favorite_actionbar_dots"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_swap_vert_24"

            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/favorite_actionbar_delete"
            style="@style/ActionBarElement"
            android:contentDescription=""
            app:layout_constraintStart_toEndOf="@id/favorite_actionbar_switch"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/favorite_actionbar_new_list"
            style="@style/ActionBarElement"
            android:contentDescription="@string/generic_add_element_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_plus_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>