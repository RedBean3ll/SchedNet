<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SettingsFragment"
    android:background="@color/purple_700"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/settings_label"
        android:text="Coffee123"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center"

        android:maxLength="15"

        style="@style/TitleBar"
        android:textColor="@color/white"

        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_button_background_round"
        android:backgroundTint="@color/purple_500"

        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"

         >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            >

            <androidx.appcompat.widget.AppCompatTextView

                android:layout_columnSpan="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Info:"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:text=""
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_update_name_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Update Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_white"
                android:background="@color/purple_700"
                android:gravity="center"
                android:backgroundTint="@color/purple_700"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_column="1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:text=""
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_change_password_button"
                android:text="Update Password"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:background="@color/purple_700"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_column="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_change_question_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:background="@color/purple_700"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Update Sequrity QU"
                android:layout_columnSpan="2"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_logout_account"
                android:text="Logout"
                android:textSize="20sp"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:background="@color/purple_500"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:gravity="center"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_delete_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Delete Account"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@color/red_error"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_columnSpan="2"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Event Preferences:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Todo Expiration:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/garbage_collector_todo"
                android:layout_column="1"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Calendar Expiration:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                />
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/garbage_collector_calendar"
                android:layout_column="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Favorite Page Preferences:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:text="Default to calendar"
                android:layout_width="match_parent"
                android:layout_columnSpan="2"
                />
        </GridLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>