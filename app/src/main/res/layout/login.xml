<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <TextView
            android:id="@+id/lgn_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Username:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lgn_name_edit"
            app:layout_constraintTop_toTopOf="parent"

            />


    <EditText
            android:id="@+id/lgn_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="9"
            android:inputType="textEmailAddress"
            android:text="email"
            app:layout_constraintStart_toEndOf="@id/lgn_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />



    <TextView
        android:id="@+id/lgn_pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lgn_pass_edit"
        app:layout_constraintTop_toBottomOf="@id/lgn_name_text"

        />

    <EditText
        android:id="@+id/lgn_pass_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:inputType="textPassword"
        android:text="*****"
        app:layout_constraintStart_toEndOf="@id/lgn_pass_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lgn_name_edit" />


</androidx.constraintlayout.widget.ConstraintLayout>